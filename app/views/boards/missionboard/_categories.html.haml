- @categories.each do |category|
  .panel.panel-default
    .panel-heading
      %h3
        %span.pull-right
          = link_to 'Edit', edit_board_category_path(@board, category), class: 'btn btn-default btn-sm'
          = link_to 'Destroy', board_category_path(@board, category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm'
        .panel-title= category.name
    .panel-body
      .posts-grid
        - category.posts.each do |post|
          = render 'boards/missionboard/post', category: category, post: post
        .media.postbox
          %p
            = link_to 'New Post', new_board_category_post_path(@board, category), class: 'btn btn-primary'

= link_to 'New Category', new_board_category_path(@board), class: 'btn btn-default'
