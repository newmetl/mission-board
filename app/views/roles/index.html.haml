%p#notice= notice
%h1 Roles
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= link_to 'Edit', edit_board_role_path(@board, role)
        %td= link_to 'Destroy', board_role_path(@board, role), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Role', new_board_role_path
= link_to 'Back to Board', board_path(@board)
