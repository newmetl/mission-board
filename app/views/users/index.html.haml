%p#notice= notice
.container
  %p= link_to 'Back to Boards Overview', root_path
  %h2.sub-header Boards
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th
      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td
              = link_to 'Show', user, class: 'btn btn-sm btn-primary'
              = link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-default'
              = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
        %tr
          %td{ colspan: '7' }= link_to 'New User', new_user_path, class: 'btn btn-primary'
